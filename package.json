{
  "name": "nova-cli-test",
  "version": "0.0.3",
  "description": "A command-line interface built with Ink",
  "keywords": [
    "cli",
    "ink",
    "react",
    "terminal",
    "command-line"
  ],
  "homepage": "https://github.com/hotmanxp/ink-app-hello#readme",
  "bugs": {
    "url": "https://github.com/hotmanxp/ink-app-hello/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hotmanxp/ink-app-hello.git"
  },
  "license": "MIT",
  "author": {
    "name": "Ethan Liang",
    "email": "ethan@example.com",
    "url": "https://github.com/hotmanxp"
  },
  "bin": "dist/cli.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "prettier --check . && xo && ava",
    "format": "prettier --write .",
    "start": "node dist/cli.js",
    "dev:bun": "bun source/cli.tsx",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "source"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "fs-extra": "^11.3.0",
    "ink": "^4.1.0",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.0",
    "meow": "^11.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/node": "^24.1.0",
    "@types/react": "^18.0.32",
    "@vdemedes/prettier-config": "^2.0.1",
    "ava": "^5.2.0",
    "chalk": "^5.2.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ink-testing-library": "^3.0.0",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "xo": "^0.53.1"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "react/prop-types": "off",
      "unicorn/expiring-todo-comments": "off",
      "unicorn/filename-case": "off"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "printWidth": 100
  }
}
